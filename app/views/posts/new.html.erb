<h1>Add new Post</h1>

<%= form_for(@post) do |f| %>

 <div class="field">
<%= f.label :title %><br />
<%= f.text_field :title %> <br />
</div>

 <div class="field">
<%= f.label :body %><br />
<%= f.text_area :body , cols: "30", rows: "10" %><br />
</div>

 <div class="action">
<%= f.submit "Create Post" %>
</div>

<% end %>


<%= link_to 'Back', posts_path %>